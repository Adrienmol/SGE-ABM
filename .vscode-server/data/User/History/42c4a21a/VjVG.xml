   <!-- Menu que se muestra -->

    <menuitem name="Hospital" id="tarea03abm_menu_root"/>

    <!-- CategorÃ­a -->

    <menuitem name="Medicos" id="tarea03abm_medicos" parent="tarea03abm_menu_root"/>
    

    <!-- actions, necesario para mostrar la app en el menu de la izquierda -->

    <menuitem name="List" id="tarea03abm_menu_2_list" parent="medicos"
              action="tarea03abm.action_window"/>
    
</odoo>